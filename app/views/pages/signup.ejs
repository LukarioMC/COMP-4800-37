<%- include('../partials/header'); %> 
<%- include('../partials/navbar'); %>

<main class="container-xl">
    <% if (err) { %>
        <div class="alert alert-danger" role="alert"><%= err %></div>
    <% } %>  
    <h1>Sign Up</h1>
    <form action="/api/signup" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Email</label>
            <input id="email" name="email" type="email" class="form-control" autocomplete="email" required>
        </div>
        <div class="mb-3">
            <label for="new-password" class="form-label">Password</label>
            <input id="new-password" name="password" type="password" class="form-control" autocomplete="new-password" required
            pattern="^(?=.*\d)(?=.*[a-zA-Z])(?!.*\s).{8,100}$" 
            title="Password must be between 8 and 100 characters long, contain no spaces, and include at least one digit and one letter.">
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <span class="text-danger" id="passwordMismatchAlert" style="display:none">(Passwords do not match!)</span>
            <input id="confirmPassword" name="confirmPassword" type="password" class="form-control" autocomplete="confirm-password" required>
        </div>
        <div class="mb-3">
            <label for="fname" class="form-label">First Name (Optional)</label>
            <input id="fname" name="fname" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label for="lname" class="form-label">Last Name (Optional)</label>
            <input id="lname" name="lname" type="text" class="form-control">
        </div>
        <button id="submit" type="submit" class="btn btn-primary">Sign up</button>
        <div class="mt-3"><a href="/login">Already have an account? Log in here!</a></div>
    </form>

    <script src="signup.js"></script>
</main>

<%- include('../partials/footer'); %>
