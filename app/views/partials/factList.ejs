<div>
<% if (typeof activeTags !== 'undefined') { %>
    <script>
      activeTagsString = "<%= activeTags %>"
    </script>
<% } %>
  <script src="factoids.js" defer></script>
  
  <main class="container-xl">
    <br>
  
    <div class="input-group mb-5 mt-3">
      <input 
        class="form-control" 
        type="text" 
        placeholder="Look up a fact by text..."
        id="searchBarText" 
      />
      <button 
        class="btn btn-outline-primary" 
        type="button" 
        id="search-by-text-btn"
      >
        Search
      </button>
    </div>
  
    <div id="tags" class="mb-3"></div>
  
    <div class="dropdown mb-3">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Dropdown button
      </button>
      <ul class="dropdown-menu">
        <% tags.forEach((tag) => { %>
          <li class="ddtag dropdown-item" id="<%= tag.name %>"><%= tag.name %></li>
        <% })%>
      </ul>
    </div>
  
    <!-- Factoids Section -->
    <div id="factoids" class="container accordion p-0">
      <% if (typeof factoids !== 'undefined') { %>
        <% factoids.forEach((factoid) => { %>
        <%- include('../partials/fact', { factoid, accordionParent: '#factoids' }) %>
      <% }) %>
      <% } %>
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination d-flex justify-content-center" style="background-color: rgb(111, 185, 185)">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
    </nav>
</div>